<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}{{ 'head.base' | trans }}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
            <link rel="icon" type="image/x-icon" href="{{ asset('wookie.ico') }}" />
            <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bellefair" >
            <link href="https://fonts.googleapis.com/css?family=Lobster" rel="stylesheet">
            <link rel="stylesheet" href="{{ asset('assets/images/monprojet.css') }}" />
        {% endblock %}
    </head>
    <body>
    <div id="titre">
        <h2 id="title"><a class="mx-auto titre-blog" style="color: #6E6E6E" href="{{ path('homepage') }}">{{ 'title.base' | trans}}</a></h2>
        <nav class="navbar navbar-expand-lg justify-content-between navbar-light ">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('mppage') }}">{{ 'second.onglet.base'| trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">{{ 'third.onglet.base'| trans }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contactpage') }}">{{ 'fourth.onglet.base'| trans }}</a>
                    </li>
                </ul>
            </div>
            {% block time %}{% endblock %}
        </nav>
    </div>
    <div id="fond">
        {% block body %}
        {% endblock %}
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
<footer>
    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
        <div class="btn-group mr-2" role="group" aria-label="First group">
            <button type="image" src="{{ asset('assets/images/fr-icon.jpg') }}" class="btn btn-secondary"></button>
            <button type="image" src="{{ asset('assets/images/uk-icon.png') }}" class="btn btn-secondary"></button>
        </div>
    </div>
</footer>
</html>
